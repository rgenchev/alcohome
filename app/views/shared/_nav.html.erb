<nav class="navbar fixed-top navbar-expand-lg navbar-light bg-white">
  <%= link_to image_tag('alcohome-logo.jpg', height: '70', width: '70'), root_path, class: 'navbar-brand' %>
  
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav ml-auto">

      <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false"><%= t('.categories') %></a>
        <div class="dropdown-menu">
          <% Category.all.each do |category| %>
            <%= link_to "#{category.name}", category_path(category), class: 'dropdown-item' %>
          <% end %>

          <div class="dropdown-divider"></div>

          <%= link_to t('.all_categories'), categories_path, class: 'dropdown-item' %>
        </div>
      </li>

      <li class="nav-item">
        <%= link_to t('.about'), about_path, class: 'nav-link' %>
      </li>

      <li class="nav-item">
        <%= link_to t('.contact'), contact_path, class: 'nav-link' %>
      </li>

      <% if I18n.locale == I18n.default_locale %>
        <strong><%= link_to "Deutsch", { locale: :de }, class: 'nav-link' %></strong>
      <% else %>
        <strong><%= link_to "English", { locale: :en }, class: 'nav-link' %></strong>
      <% end %>

      <% if current_user && current_user.admin? %>
        <li class="nav-item">
          <strong><%= link_to t('.logout'), destroy_user_session_path, method: :delete, class: 'nav-link' %></strong>
        </li>
      <% end %>
    </ul>
  </div>
</nav>
