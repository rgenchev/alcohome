<% content_for :title, t('.title') %>

<div class="container">
  <div class="row text-center mt-3">
    <div class="col-md-12">
      <h1 class="page-title"><%= t('.title') %></h1>
    </div>
  </div>

  <%= render partial: "shared/horizontal_line", locals: { width: 70 } %>

  <div class="row text-center">
    <% @categories.each do |category| %>
      <div class="col-md-4 mb-3">
        <a href="<%= category_path(category) %>">
          <div class="hoverable-field-wrapper">
            <%= image_tag(category.image.url, class: 'hoverable-image img-fluid rounded') %>
            <div class="hoverable-field-text-wrapper">
              <h2 class="font-weight-bold"><%= category.name %></h2>
            </div>
          </div>
        </a>
      </div>
    <% end %>
  </div>
</div>
