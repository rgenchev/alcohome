<div class="container">
  <div class="row text-center mt-5 mb-5">
    <div class="col-md-12">
      <h1 id="about-heading"><%= t('.title') %></h1>
    </div>
  </div>

  <div class="row text-center">
    <% @categories.each do |category| %>
      <div class="col-md-4 mt-3 mb-3">
        <a href="<%= category_path(category) %>">
          <div class="hoverable-field-wrapper">
            <%= image_tag("#{category.name.downcase}.jpg", class: 'hoverable-image img-fluid rounded') %>
            <div class="hoverable-field-text-wrapper">
              <strong></i> <h2><%= category.name %></h2></strong>
            </div>
          </div>
        </a>
      </div>
    <% end %>
  </div>
</div>
