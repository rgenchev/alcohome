<div id="parent" class="col-md-4 text-center">
  <a href="<%= product_path(product) %>">
    <div class="hoverable-field-wrapper mb-5">
      <% if product.on_sale %>
        <div id="child" class="corner-ribbon top-right red shadow">20% OFF</div>
      <% end %>
      <%= image_tag(product.image.url, class: 'hoverable-image img-fluid rounded') %>
      <div class="hoverable-field-text-wrapper">
        <div class="product-details">
          <i class="fa fa-eye"></i> <%= link_to t('.product_details'), product_path(product), class: 'font-weight-bold' %>
        </div>
      </div>
      <p></p>
      <h4><%= product.vendor.name %> <%= product.name %></h4>
      <% if product.on_sale %>
        <div class="price on-sale-price">Now &euro;<%= product.on_sale_price %></div>
      <% end %>
      <div class="price <%= 'line-through' if product.on_sale %>">&euro;<%= product.price %></div>
    </div>
  </a>
</div>
