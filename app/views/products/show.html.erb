<p id="notice"><%= notice %></p>

<div class="container-fluid" style="background-color:#CDCDCD; max-width:1750px">
	<div class="row mt-5" style="background-color: rgba(255,0,0,0.1);">

		<div class="col-6 col-md-4">
			<%= image_tag('vodka_grey_goose.jpg', class: 'img-fluid rounded') %>
		</div>

		<div class="col-6 col-md-4 card bg-light" style="max-width: 18rem;">
			<div class="card-header text-center"><%= @product.name %></div>
			<div class="card-body">
				<h5 class="card-title text-right"><%= @product.price %> EUR</h5>
				<p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
			</div>
		</div>
	</div>
</div>
